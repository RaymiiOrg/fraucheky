THIS_SCRIPT=$0
DIR=$(dirname $THIS_SCRIPT)

vidpid=$1
with_index=$2

# Copy INDEX file.
if test "$with_index" = "no"; then
  echo "Please specify INDEX file by --with-index=<INDEX> option." 
  exit 1
else
  cp -p $with_index INDEX
fi

# Copy GPL if not.
if ! test -f COPYING; then
   cp -p $DIR/COPYING .
fi

# Copy README file.
if ! test -f README; then
   cp -p ../README .
fi
